{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "/public/*",
      ],
      "@/*": [
        "/src/*"
      ]
    },
  },
  "include": [
    "vite.config.ts"
  ]
}